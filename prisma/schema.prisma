generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  SELLER
  CUSTOMER
}

enum DosageForm {
  TABLET
  CAPSULE
  SYRUP
  INJECTION
  OINTMENT
  DROPS
  INHALER
  PATCH
  SUPPOSITORY
  POWDER
}

enum Unit {
  MG
  ML
  G
  IU
  MCG
}

enum MedicineStatus {
  AVAILABLE
  OUT_OF_STOCK
  DISCONTINUED
}

enum OrderStatus {
  PLACED
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  MOBILE_PAYMENT
  CASH_ON_DELIVERY
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          Role      @default(CUSTOMER)
  banned        Boolean   @default(false)
  banReason     String?
  banExpires    DateTime?
  dob           DateTime?
  phone         String?
  address       String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions  Session[]
  accounts  Account[]
  cart      Cart?
  medicines Medicine[]
  orders    Order[]
  reviews   Review[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @default(cuid())
  userId       String
  expiresAt    DateTime
  token        String   @unique
  ipAddress    String   @default("")
  userAgent    String   @default("")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id         String   @id @default(cuid())
  accountId  String
  providerId String
  userId     String
  password   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@index([identifier])
}

model Cart {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User       @relation(fields: [userId], references: [id])
  items CartItem[]

  @@map("cart")
}

model CartItem {
  id         String   @id @default(uuid()) @db.Uuid
  cartId     String   @db.Uuid
  medicineId String   @db.Uuid
  quantity   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  cart     Cart     @relation(fields: [cartId], references: [id])
  medicine Medicine @relation(fields: [medicineId], references: [id])

  @@index([cartId])
  @@index([medicineId])
  @@map("cart_item")
}

model Category {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @db.VarChar(255)
  slug      String   @unique @db.VarChar(255)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  medicines Medicine[]

  @@map("category")
}

model Medicine {
  id          String         @id @default(uuid()) @db.Uuid
  name        String         @db.VarChar(255)
  brand       String         @db.VarChar(255)
  description String         @db.Text
  slug        String         @unique @db.VarChar(255)
  dosageForm  DosageForm
  unit        Unit
  strength    String         @db.VarChar(100)
  stock       Int
  price       Float
  image       String
  status      MedicineStatus @default(AVAILABLE)
  isOTCOnly   Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  sellerId   String
  categoryId String @db.Uuid

  seller     User        @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  category   Category    @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  reviews    Review[]
  cartItems  CartItem[]
  orderItems OrderItem[]

  @@index([sellerId, categoryId])
  @@map("medicine")
}

model Order {
  id              String        @id @default(uuid()) @db.Uuid
  status          OrderStatus   @default(PLACED)
  totalAmount     Float
  shippingAddress Json
  paymentMethod   PaymentMethod @default(CASH_ON_DELIVERY)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  items OrderItem[]

  @@map("order")
}

model OrderItem {
  id         String @id @default(uuid()) @db.Uuid
  quantity   Int
  price      Float
  orderId    String @db.Uuid
  medicineId String @db.Uuid

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  medicine Medicine @relation(fields: [medicineId], references: [id], onDelete: Restrict)

  @@map("order_item")
}

model Review {
  id         String   @id @default(uuid()) @db.Uuid
  rating     Int      @db.SmallInt
  content    String   @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  medicineId String   @db.Uuid
  userId     String

  medicine Medicine @relation(fields: [medicineId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("review")
}
